---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { capitalize } from "../utils";

const allBlogArticles: CollectionEntry<'blog'>[] = await getCollection('blog');

const tags: string[] = allBlogArticles.flatMap((article: any) => article.data.tags);

const uniqueTags: string[] = [...new Set(tags)];
---

<footer class="bg-gray-900 text-white">
    <div class="container mx-auto mt-10 max-w-screen-xl px-8">
      <div class="grid grid-cols-1 gap-12 sm:grid-cols-2 lg:grid-cols-4">
        <div class="mt-10">
          <h3 class="text-xl font-semibold mb-4"><i>Por mi raza hablará el espíritu</i></h3>
          <p class="text-white text-sm">
            La convicción de que la raza nuestra elaborará una cultura de tendencias nuevas, de esencia espiritual y libérrima.
          </p>
        </div>
        <div class="mt-10">
          <h3 class="text-xl font-semibold mb-4">Progrmas</h3>
          <ul class="text-white text-sm">
            {uniqueTags.map(tag => (
              <li class="mb-2">
                <a href={'/articles/tag/' + tag}>#{capitalize(tag)}</a>
              </li>
            ))}
          </ul>
        </div>

        <div class="mt-10">
          <h3 class="text-xl font-semibold mb-4">Resultados</h3>
          <ul class="text-white text-sm">
            <li class="mb-2">
              <a href="#">2023</a>
            </li>
            <li class="mb-2">
              <a href="#">2022</a>
            </li>
            <li class="mb-2">
              <a href="#">2021</a>
            </li>
            <li class="mb-2">
              <a href="#">2020</a>
            </li>
            <li class="mb-2">
              <a href="#">2019</a>
            </li>
          </ul>
        </div>

        <div class="mt-10">
          <h3 class="text-xl font-semibold mb-4">Contacto</h3>
          <ul class="text-white text-sm">
            <li class="mb-2">
              <a href="#">Email</a>
            </li>
            <li class="mb-2">
              <a href="#">Youtube</a>
            </li>
            <li class="mb-2">
              <a href="#">Notion</a>
            </li>
            <li class="mb-2">
              <a href="#">X</a>
            </li>
          </ul>
        </div>
  </footer>